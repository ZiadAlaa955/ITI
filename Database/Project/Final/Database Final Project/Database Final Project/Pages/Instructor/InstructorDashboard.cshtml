@page
@model Database_Final_Project.Pages.Instructor.InstructorDashboardModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="fw-bold text-danger">Welcome, @Model.CurrentInstructor.InsName! 👨‍🏫</h1>
        <div class="d-flex align-items-center">
            <span class="badge bg-danger p-2 me-2">Instructor Portal</span>
            <a asp-page="/Index" class="btn btn-outline-secondary btn-sm shadow-sm">Logout</a>
        </div>
    </div>

    <h3 class="mb-4 text-dark"><i class="bi bi-book me-2"></i>Assigned Courses</h3>
    <div class="row g-4 mb-5">
        @foreach (var course in Model.AssignedCourses)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 transition-hover">
                    <div class="card-body text-center d-flex flex-column align-items-center py-4">
                        <div class="rounded-circle bg-danger text-white mb-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                            <i class="bi bi-journal-code fs-3"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">@course.CourseName</h5>

                        <div class="d-grid gap-2 w-100">
                            <a asp-page="/Instructor/GenerateExam"
                               asp-route-course="@course.CourseName"
                               class="btn btn-danger w-100 mb-2">Generate Exam</a>
                            <a asp-page="/Instructor/AddQuestion"
                               asp-route-courseId="@course.CourseId"
                               class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-plus-circle"></i> Add Question
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr class="my-5" />

    <h3 class="mb-4 text-dark"><i class="bi bi-bar-chart-line me-2"></i>Reporting Center</h3>
    <div class="row g-3">
        <div class="col-md-4">
            <a asp-page="/Instructor/Reports/Report1" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm report-item py-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="report-icon bg-danger-subtle text-danger me-3">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold text-dark">Student Info</h6>
                            <small class="text-muted">By Track ID</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-page="/Instructor/Reports/Report2" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm report-item py-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="report-icon bg-primary-subtle text-primary me-3">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold text-dark">Student Grades</h6>
                            <small class="text-muted">By Student ID</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-page="/Instructor/Reports/Report3" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm report-item py-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="report-icon bg-success-subtle text-success me-3">
                            <i class="bi bi-journal-bookmark-fill"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold text-dark">Instructor Courses</h6>
                            <small class="text-muted">By Instructor ID</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-page="/Instructor/Reports/Report4" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm report-item py-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="report-icon bg-warning-subtle text-warning me-3">
                            <i class="bi bi-tags-fill"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold text-dark">Course Topics</h6>
                            <small class="text-muted">By Course ID</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-page="/Instructor/Reports/Report5" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm report-item py-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="report-icon bg-info-subtle text-info me-3">
                            <i class="bi bi-printer-fill"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold text-dark">Print Exam</h6>
                            <small class="text-muted">By Exam ID</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-page="/Instructor/Reports/Report6" class="text-decoration-none">
                <div class="card h-100 border-0 shadow-sm report-item py-3">
                    <div class="card-body d-flex align-items-center">
                        <div class="report-icon bg-dark-subtle text-dark me-3">
                            <i class="bi bi-check-all"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold text-dark">Exam Answers</h6>
                            <small class="text-muted">By Exam & Student</small>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="mt-5 pt-4">
        <div class="card bg-light border-0 shadow-sm">
            <div class="card-header bg-dark text-white fw-bold">Personal Information</div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 border-end">
                        <p class="text-muted mb-1 small">Instructor ID</p>
                        <h6 class="fw-bold">@Model.CurrentInstructor.InsId</h6>
                    </div>
                    <div class="col-md-3 border-end">
                        <p class="text-muted mb-1 small">Full Name</p>
                        <h6 class="fw-bold">@Model.CurrentInstructor.InsName</h6>
                    </div>
                    <div class="col-md-3 border-end">
                        <p class="text-muted mb-1 small">Assigned Track</p>
                        <h6 class="fw-bold">@(Model.CurrentInstructor.Track?.TrackName ?? "No Track")</h6>
                    </div>
                    <div class="col-md-3">
                        <p class="text-muted mb-1 small">Hiring Date</p>
                        <h6 class="fw-bold">@(Model.CurrentInstructor.HiringDate?.ToString("MMMM dd, yyyy") ?? "N/A")</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(220, 53, 69, 0.15) !important;
    }

    .report-item {
        transition: all 0.2s;
    }

        .report-item:hover {
            transform: scale(1.02);
            background-color: #fffafb;
            border: 1px solid #f8d7da !important;
        }

    .report-icon {
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
    }

    .bg-danger-subtle {
        background-color: #f8d7da;
    }

    .bg-primary-subtle {
        background-color: #cfe2ff;
    }

    .bg-success-subtle {
        background-color: #d1e7dd;
    }

    .bg-warning-subtle {
        background-color: #fff3cd;
    }

    .bg-info-subtle {
        background-color: #cff4fc;
    }

    .bg-dark-subtle {
        background-color: #e2e3e5;
    }
</style>
@page "{courseId:int}"
@model Database_Final_Project.Pages.Instructor.AddQuestionModel
@{
    ViewData["Title"] = "Add Question";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger shadow-sm border-start border-4 border-danger">
                    <i class="bi bi-x-circle-fill me-2"></i> @Model.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success shadow-sm border-start border-4 border-success">
                    <i class="bi bi-check-circle-fill me-2"></i> @Model.SuccessMessage
                    <div class="mt-2">
                        <a asp-page="./InstructorDashboard" class="btn btn-sm btn-success">Back to Dashboard</a>
                    </div>
                </div>
            }

            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-patch-plus me-2"></i>Create New Question</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="CourseId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Question Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter the question text..." required></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label fw-bold">Type</label>
                                <select asp-for="QType" class="form-select" id="qTypeSelect" onchange="toggleOptions()">
                                    <option value="MCQ">Multiple Choice (MCQ)</option>
                                    <option value="TF">True / False (TF)</option>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold">Mark</label>
                                <input asp-for="Mark" type="number" class="form-control" min="1" />
                            </div>
                        </div>

                        <div class="mb-3" id="optionsSection">
                            <label class="form-label fw-bold text-primary">MCQ Options (Comma Separated)</label>
                            <input asp-for="RawOptions" class="form-control" placeholder="Choice A, Choice B, Choice C..." />
                            <div class="form-text">Separate options with commas. Example: Red, Green, Blue</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Model Answer (Correct Choice)</label>
                            <input asp-for="ModelAnswer" class="form-control" placeholder="Type the correct text exactly" required />
                            <div class="form-text text-muted">For TF: Type "True" or "False". For MCQ: Type the correct choice text.</div>
                        </div>

                        <hr />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark shadow-sm">
                                <i class="bi bi-save me-2"></i> Save Question
                            </button>
                            <a asp-page="./InstructorDashboard" class="btn btn-link text-muted">Cancel and Go Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleOptions() {
        var type = document.getElementById("qTypeSelect").value;
        var section = document.getElementById("optionsSection");
        if (type === "TF") {
            section.style.display = "none";
        } else {
            section.style.display = "block";
        }
    }
    // Initialize on load
    window.onload = toggleOptions;
</script>
@page
@model Database_Final_Project.Pages.Instructor.Reports.Report1Model
@{
    ViewData["Title"] = "Report 01 - Student Info";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white p-3">
                    <h5 class="mb-0"><i class="bi bi-people-fill me-2"></i>Report 01: Students by Track</h5>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="text-muted">Enter a Track ID to retrieve all enrolled students via Stored Procedure.</p>

                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Track ID</label>
                            <input type="number" name="trackId" class="form-control form-control-lg text-center border-danger" placeholder="e.g. 10" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                <i class="bi bi-gear-wide-connected"></i> Generate Preview
                            </button>
                            <a asp-page="/Instructor/InstructorDashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@page "{id:int}"
@model Database_Final_Project.Pages.Instructor.Reports.ViewReport4Model
@{
    ViewData["Title"] = "Course Topics Preview";
}

<div class="container py-4">
    <div class="d-flex justify-content-between mb-4 no-print">
        <a asp-page="/Instructor/InstructorDashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        @if (string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <button onclick="window.print()" class="btn btn-warning shadow text-dark fw-bold">
                <i class="bi bi-printer"></i> Export PDF
            </button>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger shadow border-start border-4 border-warning">
            <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Validation Error</h4>
            <p class="mb-0">@Model.ErrorMessage</p>
        </div>
    }
    else
    {
        <div class="report-paper mx-auto shadow-lg p-5 mb-5 bg-white border">

            <div class="border-start border-warning border-5 ps-4 mb-5">
                <h1 class="fw-bold mb-0 text-dark">COURSE SYLLABUS</h1>
                <h4 class="text-muted">Topics Breakdown</h4>
            </div>

            <div class="row mb-4 bg-light p-3 mx-0 rounded">
                <div class="col-6">
                    <span class="small text-uppercase text-muted">Course Title</span>
                    <h5 class="fw-bold text-dark">@Model.CourseName</h5>
                </div>
                <div class="col-6 text-end">
                    <span class="small text-uppercase text-muted">Course ID</span>
                    <h5 class="fw-bold text-dark">#@RouteData.Values["id"]</h5>
                </div>
            </div>

            <div class="px-3">
                <h6 class="fw-bold mb-3"><i class="bi bi-list-check me-2 text-warning"></i>Table of Contents</h6>
                <ul class="list-group list-group-flush">
                    @if (Model.Topics.Any())
                    {
                        int counter = 1;
                        @foreach (var topic in Model.Topics)
                        {
                            <li class="list-group-item d-flex align-items-center py-3 border-bottom-0">
                                <span class="badge bg-warning text-dark rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">@counter</span>
                                <span class="fs-5">@topic.TopicName</span>
                            </li>
                            counter++;
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center py-5 text-muted">
                            No topics have been assigned to this course yet.
                        </li>
                    }
                </ul>
            </div>

            <div class="mt-5 pt-5 border-top text-center text-muted small">
                <p>Generated by Examination System Reporting Services &copy; @DateTime.Now.Year</p>
            </div>
        </div>
    }
</div>

<style>
    .report-paper {
        max-width: 800px;
        min-height: 1000px;
        border-top: 8px solid #ffc107 !important;
    }

    @@media print {
        .no-print {
            display: none !important;
        }

        .report-paper {
            box-shadow: none !important;
            border: none !important;
            width: 100% !important;
            margin: 0 !important;
        }

        body {
            background-color: white !important;
        }
    }

    body {
        background-color: #fdfdfd;
    }
</style>
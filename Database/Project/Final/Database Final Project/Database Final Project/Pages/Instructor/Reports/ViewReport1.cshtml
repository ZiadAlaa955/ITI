@page "{id:int}"
@model Database_Final_Project.Pages.Instructor.Reports.ViewReport1Model
@{
    ViewData["Title"] = "Track Report";
}

<div class="container mt-5">
    <div class="no-print mb-4">
        <a asp-page="/Instructor/InstructorDashboard" class="btn btn-secondary">
            <i class="bi bi-house-door"></i> Back to Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger shadow border-start border-4 border-danger">
            <h4 class="alert-heading"><i class="bi bi-exclamation-octagon-fill me-2"></i>Validation Error</h4>
            <p class="mb-0">@Model.ErrorMessage</p>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Student Report - Track: @Model.TrackName</h5>
                <button onclick="window.print()" class="btn btn-sm btn-light no-print">
                    <i class="bi bi-printer"></i> Print Report
                </button>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>City</th>
                            <th>Street</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Students.Count > 0)
                        {
                            foreach (var item in Model.Students)
                            {
                                <tr>
                                    <td>@item.StudentId</td>
                                    <td>@item.StudentName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.City</td>
                                    <td>@(item.Street ?? "---")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No students found in this track.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    @@media print {
        .no-print {
            display: none !important;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>
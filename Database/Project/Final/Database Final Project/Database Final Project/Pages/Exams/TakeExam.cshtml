@page "{crsId:int}"
@model Database_Final_Project.Pages.Exams.TakeModel
@{
    ViewData["Title"] = "Take Exam";
}

<div class="container py-5">
    <div class="card bg-primary text-white mb-4 shadow">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Exam #@Model.CurrentExam.ExamId</h2>
            <span class="badge bg-light text-primary fs-6">
                <i class="bi bi-clock"></i> @Model.CurrentExam.ExamDurationMins Mins
            </span>
        </div>
    </div>

    <form method="post">
        <input type="hidden" name="examId" value="@Model.CurrentExam.ExamId" />

        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            var q = Model.Questions[i];
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4">
                    <h5 class="text-muted">Question @(i + 1) <small class="float-end text-primary">(@q.Mark Marks)</small></h5>
                    <p class="fs-5 fw-bold">@q.QDescription</p>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var opt in q.QuestionAnswerOptions)
                        {
                            <label class="list-group-item list-group-item-action d-flex align-items-center rounded mb-2 border">
                                <input class="form-check-input me-3" type="radio"
                                       name="answers[@q.QuestionId]"
                                       value="@opt.QAnsOption" required>
                                <span>@opt.QAnsOption</span>
                            </label>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="text-center mt-5">
            <button type="submit" class="btn btn-success btn-lg px-5 shadow">Finish and Submit</button>
        </div>
    </form>
</div>
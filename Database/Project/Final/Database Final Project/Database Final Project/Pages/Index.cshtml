@page
@model IndexModel
@{
    ViewData["Title"] = "Portal Gateway";
}

<div class="container py-5 text-center">
    <div class="mb-5">
        <h1 class="display-4 fw-bold">Welcome to the Examination Portal</h1>
        <p class="lead text-muted">Please select your role to continue</p>
    </div>

    <div class="row justify-content-center gap-4">
        <div class="col-md-5">
            <div class="card shadow border-0 p-4">
                <i class="bi bi-person-badge text-primary display-1 mb-3"></i>
                <h3>Student</h3>
                <p>Login to take exams and check your grades.</p>
                <a asp-page="/Student/login" class="btn btn-primary btn-lg">Student Login</a>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow border-0 p-4">
                <i class="bi bi-person-workspace text-danger display-1 mb-3"></i>
                <h3>Instructor</h3>
                <p>Login to manage questions and generate exams.</p>
                <a asp-page="/instructor/Instructorlogin" class="btn btn-danger btn-lg shadow-sm">Instructor Login</a>
            </div>
        </div>
    </div>
</div>